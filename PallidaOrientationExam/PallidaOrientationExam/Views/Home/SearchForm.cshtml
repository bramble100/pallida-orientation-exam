@{
    Layout = "_Layout";
}
@model string

<h2>Search Form</h2>
<div>
    <form action="/search" method="get">
        <label for="licenseplate">License Plate</label>
        <input id="licenseplate" placeholder="e.g. HMZ-140 or any part of the license plate (like MZ-1)" value="@Model" />
        <input type="submit" />
    </form>
</div>
<div>
    <a href="/search/police">Police cars only</a>
    <a href="/search/diplomat">Diplomats only</a>
</div>